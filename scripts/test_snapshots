#!/bin/bash

LC="${LC:-bin/lc}"
NODE_ENV="${NODE_ENV:-development}"
ret=0
upd=0

red='\033[0;31m'
nc='\033[0m' # No Color

usage() {
  program_name=$(basename $0)
  bold=$(tput bold)
  normal=$(tput sgr0)

  cat <<EOM
Usage: $program_name [options] path/to/test/folder/

Run snapshot tests.

Options:

  -u        Updates the snapshots.
  -h        Display this help message
EOM
  exit 0
}

run_test() {
  local d=$1
  local skip="${d}.skip"

  if [ -f $skip ]; then
    return 0
  fi

  local input="${d}input.lucy"
  local tmp=$(mktemp)

  if [[ "$input" == *"error_"* ]]; then
    local output="${d}expected.error"
  else
    local output="${d}expected.js"
  fi

  NODE_ENV=$NODE_ENV $LC $input >> $tmp 2>&1

  if [ "$upd" -eq 1 ]; then
    mv $tmp $output
    return
  fi

  if [ ! -f $output ]; then
      mv $tmp $output
      return
  fi
  
  d=$(diff $output $tmp | colordiff)

  if [ ${#d} -ge 1 ]; then
    echo -e "${red}FAILED${nc} - $input"
    echo ""
    echo "$d"

    ret=1
  fi
}

while getopts "hu" opt; do
  case ${opt} in
    h )
      usage;
      ;;
    u )
      upd=1
      ;;
  esac
done
shift $((OPTIND -1))

folder=$@

if [ -z "$folder" ]; then
  for d in test/snapshots/*/ ; do
    run_test $d
  done
else
  run_test $folder
fi

exit $ret